<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/padding_less5" android:top="@dimen/padding_less5">
                <shape>
                    <solid android:color="#11000000" />
                    <corners android:radius="@dimen/login_input_radius"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="@dimen/padding_less5" android:right="@dimen/padding_less5">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/login_input_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>