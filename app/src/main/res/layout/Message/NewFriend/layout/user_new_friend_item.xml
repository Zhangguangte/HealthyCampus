<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ItemLayout"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_less"
    android:paddingBottom="@dimen/padding_less">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="@dimen/icon_size_more_more"
        android:layout_height="@dimen/icon_size_more_more"
        android:src="@mipmap/head_default"
        android:layout_marginStart="@dimen/margin_less" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
       android:layout_marginEnd="@dimen/right_margin"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/left_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/no_width"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f2" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/no_width"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxLength="16"
                android:textColor="@color/text_level_2"
                android:textSize="@dimen/text_f3" />
        </LinearLayout>


        <Button
            android:id="@+id/btnOperation"
            android:layout_width="@dimen/icon_size_more_more3"
            android:layout_height="@dimen/icon_size"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_button_lines"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>