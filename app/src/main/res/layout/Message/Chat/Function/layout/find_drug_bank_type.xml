<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/typeLayout"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_medicine_type_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/padding"
        android:paddingTop="@dimen/padding"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_f3"
        android:paddingStart="@dimen/padding_less3"
        android:textColor="@color/text_level_1"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/view_divider"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingBottom="@dimen/padding_less4"
        android:paddingTop="@dimen/padding_less4"
        android:src="@color/colorPrimary"  />

</LinearLayout>