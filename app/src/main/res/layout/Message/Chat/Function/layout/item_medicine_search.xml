<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchLayout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_less"
        android:background="@drawable/shape_button_lines"
        android:gravity="center"
        android:padding="@dimen/padding_less2"
        android:text="药名"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f3" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/left_margin1"
        android:layout_weight="1"
        android:background="@drawable/shape_button_lines4"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_mo"
            android:background="@null"
            android:gravity="center|left"
            android:drawablePadding="@dimen/padding_less3"
            android:imeOptions="actionSearch"
            android:drawableStart="@mipmap/icon_search_grey"
            android:hint="@string/user_add_friend_search"
            android:maxLength="15"
            android:textColorHint="@color/text_level_3"
            android:padding="@dimen/padding_less2"
            android:singleLine="true"
            android:textSize="@dimen/text_f2" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="@dimen/icon_size_less1"
            android:layout_height="@dimen/icon_size_less1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/right_margin"
            android:src="@drawable/password_clear" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/right_margin"
        android:background="@drawable/shape_button_lines"
        android:gravity="center"
        android:text="@string/user_add_friend_search"
        android:textColor="@color/white"
        android:textSize="@dimen/text_f2"
        android:visibility="gone" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_one"
        android:background="@color/interval_background1" />
</LinearLayout>