<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/top_padding"
        android:paddingBottom="@dimen/top_padding">

        <LinearLayout
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mailList"
                android:layout_width="@dimen/icon_size_more"
                android:layout_height="@dimen/icon_size_more"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:clickable="true"
                app:srcCompat="@drawable/message_mail_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:text="@string/message_mail_list"
                android:textColor="@color/item_title_head_font"
                android:textSize="@dimen/text_f2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/newFriend"
                android:layout_width="@dimen/icon_size_more"
                android:layout_height="@dimen/icon_size_more"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/message_new_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:text="@string/message_new_friend"
                android:textColor="@color/item_title_head_font"
                android:textSize="@dimen/text_f2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/groupChat"
                android:layout_width="@dimen/icon_size_more"
                android:layout_height="@dimen/icon_size_more"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/message_group_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:text="@string/message_ground_chat"
                android:textColor="@color/item_title_head_font"
                android:textSize="@dimen/text_f2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Notice"
                android:layout_width="@dimen/icon_size_more"
                android:layout_height="@dimen/icon_size_more"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/message_notice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:text="@string/message_notice"
                android:textColor="@color/item_title_head_font"
                android:textSize="@dimen/text_f2" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_width"
        android:background="@color/interval_background" />

</LinearLayout>
