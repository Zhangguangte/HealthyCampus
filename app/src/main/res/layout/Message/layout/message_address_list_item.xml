<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/address_list_titleBackground"
        android:paddingBottom="@dimen/top_margin_less_less"
        android:paddingLeft="@dimen/left_padding_less"
        android:paddingTop="@dimen/top_padding_less_less"
        android:text="@string/message_address_list_catalog"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_padding"
        android:paddingBottom="@dimen/padding_less"
        android:paddingRight="@dimen/padding_less2"
        android:paddingTop="@dimen/padding_less">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.raphets.roundimageview.RoundImageView
                android:id="@+id/headPortrait"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/head_default"
                app:type="circle" />

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/docotor_display_doctor_name"
                android:layout_marginLeft="@dimen/left_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f2" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_height="@dimen/view_height_three"
        android:layout_width="match_parent"
        android:background="@color/address_list_titleBackground" />
</LinearLayout>