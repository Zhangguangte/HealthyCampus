<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_size_more_hundred3"
                android:background="@drawable/register_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/returnBack"
                    android:layout_width="@dimen/icon_size_less"
                    android:layout_height="@dimen/icon_size_less"
                    android:layout_marginStart="@dimen/margin_less"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/top_margin"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/back_icon" />

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/icon_size_more_more3"
                    android:layout_height="@dimen/icon_size_more_more3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_less"
                    android:layout_below="@+id/returnBack"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_app_round_logo" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/words_logo_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/ivLogo"
                    app:srcCompat="@drawable/ic_app_words_logo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/top_padding_less">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/top_margin"
                    android:background="@drawable/register_input_shape"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_less">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="left|center"
                        app:srcCompat="@drawable/register_phone" />

                    <View
                        android:layout_width="@dimen/view_width"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginLeft="@dimen/margin_less"
                        android:layout_marginRight="@dimen/margin_less"
                        android:background="@color/hint_color" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/register1_phone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/text_f1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/top_margin"
                    android:weightSum="29">

                    <LinearLayout
                        android:layout_width="@dimen/no_width"
                        android:layout_height="wrap_content"
                        android:layout_weight="22"
                        android:background="@drawable/register_input_shape"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_less">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="left|center"
                            app:srcCompat="@drawable/register_picture_code"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginLeft="@dimen/margin_less"
                            android:layout_marginRight="@dimen/margin_less"
                            android:background="@color/hint_color" />

                        <EditText
                            android:id="@+id/pictureCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/register1_picture_code"
                            android:inputType="text"
                            android:maxLength="8"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_f1" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/no_width"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/picture_code_image"
                        android:layout_width="@dimen/no_width"
                        android:layout_height="@dimen/register1_verification_picture_code"
                        android:layout_gravity="end|center"
                        android:layout_weight="6"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:background="@drawable/register_input_shape"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_less">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="left|center"
                        app:srcCompat="@drawable/register_short_message" />

                    <View
                        android:layout_width="@dimen/view_width"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginLeft="@dimen/margin_less"
                        android:layout_marginRight="@dimen/margin_less"
                        android:background="@color/hint_color" />

                    <EditText
                        android:id="@+id/smsCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/register1_short_message"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/text_f1" />

                    <TextView
                        android:id="@+id/tvSendSms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register1_get_code"
                        android:textColor="@color/not_clickable_color" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:background="@color/not_clickable_color"
                    android:enabled="false"
                    android:text="@string/register1_next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_f1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
