<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register1_background"
        android:background="@drawable/register_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/returnBack"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginTop="@dimen/top_margin"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back_icon" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_logo_height"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_app_round_logo" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/words_logo_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/top_margin"
            app:srcCompat="@drawable/ic_app_words_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/top_padding_less">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:background="@drawable/register_input_shape"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="@dimen/padding_less">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="left|center"
                app:srcCompat="@drawable/register_phone" />

            <View
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/icon_size"
                android:layout_marginLeft="@dimen/margin_less"
                android:layout_marginRight="@dimen/margin_less"
                android:background="@color/hint_color"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/register1_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="@dimen/text_f1"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="29"
            android:paddingTop="@dimen/top_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/no_width"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:background="@drawable/register_input_shape"
                android:orientation="horizontal"
                android:padding="@dimen/padding_less">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="left|center"
                    app:srcCompat="@drawable/register_picture_code" />

                <View
                    android:layout_width="@dimen/view_width"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginLeft="@dimen/margin_less"
                    android:layout_marginRight="@dimen/margin_less"
                    android:background="@color/hint_color"/>

                <EditText
                    android:id="@+id/pictureCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="@dimen/text_f1"
                    android:hint="@string/register1_picture_code"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/no_width"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/picture_code_image"
                android:layout_width="@dimen/no_width"
                android:layout_height="@dimen/register1_verification_picture_code"
                android:layout_weight="6"
                android:scaleType="fitXY"
                android:layout_gravity="right|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:background="@drawable/register_input_shape"
            android:orientation="horizontal"
            android:padding="@dimen/padding_less">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="left|center"
                app:srcCompat="@drawable/register_short_message" />

            <View
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/icon_size"
                android:layout_marginLeft="@dimen/margin_less"
                android:layout_marginRight="@dimen/margin_less"
                android:background="@color/hint_color"/>

            <EditText
                android:id="@+id/smsCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/register1_short_message"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f1"
                android:textColorHint="@color/hint_color" />

            <TextView
                android:id="@+id/sendSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_get_code"
                android:textColor="@color/not_clickable_color" />
        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:background="@color/not_clickable_color"
            android:text="@string/register1_next"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>

</LinearLayout>
