<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_title"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_less3">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/user_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/ivBack"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_f0" />

        <EditText
            android:id="@id/etSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:layout_toStartOf="@+id/ivSearch"
            android:layout_toEndOf="@+id/ivBack"
            android:background="@null"
            android:drawableStart="@mipmap/icon_search"
            android:drawablePadding="@dimen/padding_less4"
            android:hint="@string/input_key_word"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_f2"
            android:visibility="gone" />


        <ImageView
            android:id="@id/ivSearch"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin"
            android:src="@drawable/icon_search" />

        <ImageView
            android:id="@id/ivFunction"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin"
            android:src="@drawable/map_out"
            android:visibility="gone" />


    </RelativeLayout>
</LinearLayout>