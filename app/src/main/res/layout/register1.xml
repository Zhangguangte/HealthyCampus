<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_background"
        android:background="@drawable/register"
        android:orientation="vertical"
        android:paddingLeft="@dimen/left_margin"
        android:paddingRight="@dimen/left_margin">

        <ImageView
            android:layout_width="@dimen/register_phone_hint"
            android:layout_height="@dimen/register_phone_hint"
            android:paddingTop="@dimen/top_margin"
            app:srcCompat="@drawable/left" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_background_logo1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo1" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_height="@dimen/register_background_logo2"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/top_margin_less"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:padding="@dimen/top_margin_less"
            android:background="@drawable/register_input_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/register_pic"
                android:layout_gravity="left"
                android:layout_height="@dimen/register_pic"
                app:srcCompat="@drawable/phone" />
            <View
                android:layout_width="@dimen/register_spaced_size"
                android:layout_height="@dimen/register_pic"
                android:layout_marginRight="@dimen/register_spaced"
                android:layout_marginLeft="@dimen/register_spaced"
                android:background="@color/login_hint_input_color">
            </View>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/hint_input_color"
                android:textColor="@color/black"
                android:hint="@string/register_phone"
                android:inputType="phone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:padding="@dimen/top_margin_less"
            android:background="@drawable/register_input_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/register_pic"
                android:layout_gravity="left"
                android:layout_height="@dimen/register_pic"
                app:srcCompat="@drawable/pic_code" />
            <View
                android:layout_width="@dimen/register_spaced_size"
                android:layout_height="@dimen/register_pic"
                android:layout_marginRight="@dimen/register_spaced"
                android:layout_marginLeft="@dimen/register_spaced"
                android:background="@color/login_hint_input_color">
            </View>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/register_pic_code"
                android:textColorHint="@color/hint_input_color"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_gravity="right"
                android:layout_height="match_parent"
                app:srcCompat="@color/green6" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:padding="@dimen/top_margin_less"
            android:background="@drawable/register_input_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/register_pic"
                android:layout_gravity="left"
                android:layout_height="@dimen/register_pic"
                app:srcCompat="@drawable/short_message" />
            <View
                android:layout_width="@dimen/register_spaced_size"
                android:layout_height="@dimen/register_pic"
                android:layout_marginRight="@dimen/register_spaced"
                android:layout_marginLeft="@dimen/register_spaced"
                android:background="@color/login_hint_input_color">
            </View>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_weight="1"
                android:textColorHint="@color/hint_input_color"
                android:textColor="@color/black"
                android:hint="@string/register_short_message"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green3"
                android:text="@string/register_get_code" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/top_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_premise"
                android:textColorHint="@color/hint_input_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/register_service" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_and" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/register_private" />
        </LinearLayout>
        <Button
            android:id="@+id/Sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:background="@color/hint_button"
            android:textColor="@color/white"
            android:textSize="@dimen/login_normal_font"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>
