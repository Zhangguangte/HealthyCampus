<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/chatLayout"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding">

        <ImageView
            android:id="@id/ivBack"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:src="@mipmap/icon_back"
            android:visibility="gone" />

        <TextView
            android:id="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_f0" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_one"
        android:background="@color/text_level_2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvChatting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chat_editbar"
            android:background="@color/background_page"
            android:scrollbars="vertical"
            android:transcriptMode="alwaysScroll" />


        <LinearLayout
            android:id="@+id/chat_editbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chat_viewpagerlayout"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_less">

            <!--<com.example.HealthyCampus.common.widgets.custom_image.EmojiImageView-->
                <!--android:id="@+id/ivRecord"-->
                <!--android:layout_width="@dimen/icon_size"-->
                <!--android:layout_height="@dimen/icon_size"-->
                <!--android:layout_gravity="center"-->
                <!--app:eiv_srcChecked="@mipmap/chatting_softkeyboard"-->
                <!--app:eiv_srcDef="@mipmap/chatting_vodie" />-->

            <ImageView
                android:id="@+id/ivRecord"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:src="@mipmap/chatting_vodie"/>


            <LinearLayout
                android:layout_width="@dimen/no_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/chat_input_shape"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/chat_edit_shape"
                    android:layout_marginLeft="@dimen/padding_less2"
                    android:focusable="true"
                    android:maxLines="4"
                    android:minHeight="35dp"
                    android:textColorHint="@color/hint_color"
                    android:textCursorDrawable="@drawable/chat_edit_cursor"
                    android:textSize="@dimen/text_f2" />

                <com.example.HealthyCampus.common.record.RecordTextView
                    android:id="@+id/mRecordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_less2"
                    android:background="@drawable/chat_edit_shape"
                    android:gravity="center"
                    android:text="@string/message_chatting_press_send_voice"
                    android:textSize="@dimen/text_f2"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivEmoji"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_less2"
                android:src="@mipmap/chatting_emoticons" />

            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_less2"
                android:src="@mipmap/chatting_plus" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_less2"
                android:background="@drawable/shape_button_lines2"
                android:gravity="center"
                android:src="@mipmap/chatting_plus"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_f4"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_viewpagerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:background="@color/background_page"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mPlusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_less2"
                android:paddingBottom="@dimen/padding_less2"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/CameraLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_less2"
                    android:paddingBottom="@dimen/padding_less2">

                    <ImageView
                        android:layout_width="@dimen/icon_size_more"
                        android:layout_height="@dimen/icon_size_more"
                        android:layout_gravity="center"
                        android:background="@drawable/chat_icon_background"
                        android:scaleType="centerInside"
                        android:src="@mipmap/chatting_camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_less4"
                        android:text="拍照"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_f3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/AlbumLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_less2"
                    android:paddingBottom="@dimen/padding_less2">

                    <ImageView
                        android:layout_width="@dimen/icon_size_more"
                        android:layout_height="@dimen/icon_size_more"
                        android:layout_gravity="center"
                        android:background="@drawable/chat_icon_background"
                        android:scaleType="centerInside"
                        android:src="@mipmap/chatting_picture" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_less4"
                        android:text="相册"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_f3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/PositionLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_less2"
                    android:paddingBottom="@dimen/padding_less2">

                    <ImageView
                        android:layout_width="@dimen/icon_size_more"
                        android:layout_height="@dimen/icon_size_more"
                        android:layout_gravity="center"
                        android:background="@drawable/chat_icon_background"
                        android:scaleType="centerInside"
                        android:src="@mipmap/chatting_position" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_less4"
                        android:text="位置"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_f4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CardLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_less2"
                    android:paddingBottom="@dimen/padding_less2">

                    <ImageView
                        android:layout_width="@dimen/icon_size_more"
                        android:layout_height="@dimen/icon_size_more"
                        android:layout_gravity="center"
                        android:background="@drawable/chat_icon_background"
                        android:scaleType="centerInside"
                        android:src="@mipmap/chatting_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_less4"
                        android:text="名片"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_f4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mEmojiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpChat"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:padding="@dimen/padding_less2"
                        android:text="默认表情"
                        android:textSize="@dimen/text_f2" />

                    <TextView
                        android:id="@+id/tvSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/padding_less2"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/padding_less2"
                        android:text="发送"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_f2" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>