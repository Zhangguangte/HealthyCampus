<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/top_margin_less"
    android:paddingBottom="@dimen/top_margin_less"
    android:weightSum="11"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/information_head_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_title_head_font"
            android:layout_marginRight="@dimen/item_margin_right_left"
            android:layout_marginBottom="@dimen/item_margin_right_left"
            android:textColor="@color/item_title_head_font"
            android:text="这种做法对人的心理健康会产生负面影响" />

        <!--<TextView
            android:id="@+id/information_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin_right_left"
            android:layout_marginLeft="@dimen/item_margin_right"
            android:textSize="@dimen/item_title_content_font"
            android:textColor="@color/item_title_content_font"
            android:text="@string/item_content" />-->

        <TextView
            android:id="@+id/information_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|bottom"
            android:layout_gravity="bottom"
            android:textColor="@color/item_title_content_font"
            android:text="@string/item_time_date" />
    </LinearLayout>
    <ImageView
        android:id="@+id/information_pic"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/item_image_margin_top"
        app:srcCompat="@drawable/defult" />
</LinearLayout>
