<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:layout_marginTop="@dimen/item_image_margin_top"
        app:srcCompat="@drawable/information_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_title_head_font"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/item_margin_right_left"
            android:layout_marginRight="@dimen/item_margin_right_left"
            android:layout_marginBottom="@dimen/item_margin_right_left"
            android:textColor="@color/item_title_head_font"
            android:text="@string/item_head_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin_right_left"
            android:layout_marginLeft="@dimen/item_margin_right"
            android:textSize="@dimen/item_title_content_font"
            android:textColor="@color/item_title_content_font"
            android:text="@string/item_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/item_margin_right"
            android:textColor="@color/item_title_content_font"
            android:text="@string/item_time_date" />
    </LinearLayout>
</LinearLayout>
