<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/left_margin1"
            android:layout_weight="1"
            android:background="@drawable/shape_button_lines4"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_mo"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_search"
                android:hint="@string/user_add_friend_search"
                android:padding="@dimen/padding_less2"
                android:singleLine="true"
                android:textSize="@dimen/text_f2" />

            <ImageView
                android:id="@+id/ivClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/right_margin"
                android:src="@drawable/password_clear"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/right_margin"
            android:background="@drawable/shape_button_lines"
            android:gravity="center"
            android:text="@string/user_add_friend_search"
            android:textColor="@color/white"
            android:textSize="@dimen/text_f2"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCanel"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/right_margin"
            android:background="@null"
            android:elevation="1dp"
            android:gravity="center"
            android:text="@string/umeng_socialize_cancel_btn_str"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f2"
            android:visibility="gone" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mapLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.amap.api.maps.MapView
            android:id="@+id/mvMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/addressLayout" />

        <LinearLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/lightgreen"
            android:orientation="vertical"
            android:padding="@dimen/padding_less2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivNow"
                    android:layout_width="@dimen/icon_size_le"
                    android:layout_height="@dimen/icon_size_le"
                    android:layout_marginRight="@dimen/padding_less2"
                    android:src="@drawable/now_location" />
                <TextView
                    android:id="@+id/currentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="正在定位中"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/moveLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_less3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMove"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginRight="@dimen/padding_less2"
                    android:src="@drawable/map_location" />
                <TextView
                    android:id="@+id/moveAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="正在定位中"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f3" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/pageBackground"
        android:visibility="gone" />
</LinearLayout>