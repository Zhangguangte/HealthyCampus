<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addressItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/map_address_shape"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_less2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_less2"
        android:paddingBottom="@dimen/padding_less2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_less"
                android:text="[ 当前 ]"
                android:textColor="@color/red_text"
                android:textSize="@dimen/text_f2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_big_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="大地址"
                android:textColor="@color/text_level_1"
                android:textSize="@dimen/text_f2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_small_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="小地址"
            android:textColor="@color/text_level_3"
            android:textSize="@dimen/text_f3" />
    </LinearLayout>

</LinearLayout>
