<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/md_selector_transparent"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/summary_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_less"
                android:ellipsize="end"
                android:text="title"
                android:textColor="@color/text_level_1"
                android:textSize="@dimen/text_f1"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/summary_item_img"
            android:layout_width="@dimen/icon_size_more_more4"
            android:layout_height="@dimen/icon_size_more_more4"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/left_margin1" />
    </LinearLayout>
</android.support.v7.widget.CardView>