<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/docotor_display_height"
    android:orientation="horizontal"
    android:background="@color/white"
    android:minHeight="@dimen/docotor_display_height"
    android:weightSum="22">


    <LinearLayout
        android:layout_width="@dimen/no_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/head_portrait"
            android:layout_width="@dimen/icon_size_more_more0"
            android:layout_height="@dimen/icon_size_more_more0"
            android:src="@drawable/head_default"
            app:type="circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:paddingTop="@dimen/padding_less3"
            android:paddingBottom="@dimen/padding_less3"
            android:text="@string/docotor_display_doctor_name"
            android:textSize="@dimen/text_f2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/docotor_display_doctor_comment"
            android:textSize="@dimen/text_f3" />


    </LinearLayout>

    <View
        android:layout_width="@dimen/no_width"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="@dimen/no_width"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:orientation="vertical"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/no_width"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/icon_size_more"
                android:layout_height="@dimen/icon_size_more"
                android:layout_gravity="center"
                android:src="@drawable/clinic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/left_margin"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/no_width"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|left|bottom"
                    android:text="@string/docotor_display_school_clinic"
                    android:textSize="@dimen/text_f2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/no_width"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/docotor_display_clinic_slogan"
                    android:textSize="@dimen/text_f3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/no_width"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_size_more"
                android:layout_height="@dimen/icon_size_more"
                android:layout_gravity="center"
                android:src="@drawable/camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_less"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/no_width"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|left|bottom"
                    android:text="@string/docotor_display_self_diagnosis"
                    android:textSize="@dimen/text_f2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/no_width"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/docotor_display_diagnosis_slogan"
                    android:textSize="@dimen/text_f3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>