<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_less"
    android:layout_marginRight="@dimen/margin_less"
    android:layout_marginTop="@dimen/top_padding_less_less"
    android:layout_marginBottom="@dimen/top_padding_less_less"
    app:cardCornerRadius="@dimen/radius_card4">

    <RelativeLayout
        android:id="@+id/ItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_less"
        android:paddingBottom="@dimen/padding_less">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/icon_size_more"
            android:layout_height="@dimen/icon_size_more"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_margin0"
            android:scaleType="centerCrop"
            tools:src="@drawable/find_food_default" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin1"
            android:layout_toRightOf="@id/ivIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxEms="12"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_f3" />

        </LinearLayout>


        <ImageView
            android:id="@+id/arch"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/right_margin"
            android:src="@mipmap/back_icon"
            android:rotation="180"/>

        <TextView
            android:id="@+id/food_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/top_margin_less_less"
            android:layout_toLeftOf="@id/arch"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_f4"
            android:textColor="@color/text_level_3"
            android:layout_centerVertical="true"
            tools:text="365千卡" />

    </RelativeLayout>

</android.support.v7.widget.CardView>