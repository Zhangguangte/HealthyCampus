<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvDisease"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_less"
    android:background="@drawable/press_item"
    android:elevation="@dimen/no_width"
    android:orientation="horizontal"
    android:padding="@dimen/padding_less3"
    app:cardCornerRadius="@dimen/radius_card5"
    tools:ignore="UnusedAttribute">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_less"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/icon_size_more"
            android:layout_height="@dimen/icon_size_more"
            android:layout_marginEnd="@dimen/margin_less"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f2"
                android:singleLine="true"
                android:ellipsize="end"/>


            <TextView
                android:id="@+id/tvIntroduction"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_level_3"
                android:textSize="@dimen/text_f3" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>