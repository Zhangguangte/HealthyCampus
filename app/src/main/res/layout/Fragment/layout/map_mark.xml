<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/icon_size_less"
        android:layout_height="@dimen/icon_size_less"
        android:src="@drawable/map_hospital_location" />

    <TextView
        android:id="@+id/titleName"
        android:layout_width="@dimen/icon_size_more_more"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_margin_less_less"
        android:text="@string/docotor_display_doctor_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f5"
        android:textStyle="bold" />

</LinearLayout>