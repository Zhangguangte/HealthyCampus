<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/materialLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cornflowerblue"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_size_more_more1"
            android:layout_height="@dimen/icon_size_more_more1"
            android:src="@drawable/find_food_material" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin"
            android:text="@string/find_health_recipes_meterial_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_f1"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/foodLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:layout_marginTop="@dimen/margin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_size_more_more1"
            android:layout_height="@dimen/icon_size_more_more1"
            android:src="@drawable/find_recipes_foods" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin"
            android:text="@string/find_health_recipes_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_f1"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>