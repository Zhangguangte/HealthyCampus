<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:background="@drawable/dialog_map_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="发送定位"
            android:textColor="@color/cyan"
            android:textSize="@dimen/text_f0" />


        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivNow"
                    android:layout_width="@dimen/icon_size_more_more"
                    android:layout_height="@dimen/icon_size_more_more"
                    android:src="@drawable/now_location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="当前定位"
                    android:textSize="@dimen/text_f2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMove"
                    android:layout_width="@dimen/icon_size_more_more"
                    android:layout_height="@dimen/icon_size_more_more"
                    android:scaleType="fitXY"
                    android:src="@drawable/map_location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="目标定位"
                    android:textSize="@dimen/text_f2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>