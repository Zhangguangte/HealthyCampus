<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding"
    android:paddingEnd="@dimen/padding">

    <include layout="@layout/title_bar_consult" />


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:text="@string/health_consult_picture_information_select"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:layout_marginBottom="@dimen/margin"
                android:text="@string/health_consult_picture_information_select_hint"
                android:textColor="@color/text_level_3"
                android:textSize="@dimen/text_f3" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPatient"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="match_parent"
                tools:ignore="UnusedAttribute" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>