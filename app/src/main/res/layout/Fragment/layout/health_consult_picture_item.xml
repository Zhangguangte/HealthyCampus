<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/icon_size_more_more4"
    android:layout_height="@dimen/icon_size_more_more4"
    android:layout_marginTop="@dimen/margin_less"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/icon_size_less"
        android:layout_height="@dimen/icon_size_less"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/health_picture_delete" />

</RelativeLayout>