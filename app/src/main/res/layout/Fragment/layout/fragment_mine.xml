<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/pageBackground"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_more_hundred2"
            android:background="@color/green4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/head_default"
                    android:layout_width="@dimen/icon_size_more_more1"
                    android:layout_height="@dimen/icon_size_more_more1"
                    app:srcCompat="@drawable/head_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/top_margin"
                    android:text="小友，请留步"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f0" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_less"
                android:paddingBottom="@dimen/margin_less">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/item_title_content_font"
                    android:textSize="@dimen/text_f2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_padding_less_less"
                    android:gravity="center"
                    android:text="@string/mine_coupon"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_less"
                android:paddingBottom="@dimen/margin_less">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.00"
                    android:textColor="@color/item_title_content_font"
                    android:textSize="@dimen/text_f2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_padding_less_less"
                    android:gravity="center"
                    android:text="@string/mine_wallet"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_less"
                android:paddingBottom="@dimen/margin_less">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1230"
                    android:textColor="@color/item_title_content_font"
                    android:textSize="@dimen/text_f2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/top_padding_less_less"
                    android:gravity="center"
                    android:text="@string/mine_integral"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/mine_function" />
    </LinearLayout>

</ScrollView>