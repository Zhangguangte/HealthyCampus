<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less2">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginRight="@dimen/right_margin"
            app:srcCompat="@drawable/find_information" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/find_health_information"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/DrugLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_less"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less2">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginRight="@dimen/right_margin"
            app:srcCompat="@drawable/find_drug_bank" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/find_drug_bank"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_one"
        android:layout_marginStart="@dimen/padding"
        android:background="@color/interval_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less2">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginRight="@dimen/right_margin"
            app:srcCompat="@drawable/find_disease_bank" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/find_disease_bank"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RecipesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_less"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less2">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginRight="@dimen/right_margin"
            app:srcCompat="@drawable/find_health_recipes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/find_health_recipes"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_one"
        android:layout_marginStart="@dimen/padding"
        android:background="@color/interval_background" />
    <LinearLayout
        android:id="@+id/NearbyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less2">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginRight="@dimen/right_margin"
            app:srcCompat="@drawable/find_mall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/find_nearby_hospital_or_pharmacy"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DiagnosisLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_less"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_less2">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_less"
            android:layout_marginRight="@dimen/right_margin"
            app:srcCompat="@drawable/find_self_help_diagnosis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/find_self_help_diagnosis"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />
    </LinearLayout>


</LinearLayout>