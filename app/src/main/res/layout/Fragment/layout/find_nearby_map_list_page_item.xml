<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_less"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnLast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_less"
        android:layout_weight="1"
        android:text="@string/find_nearby_list_last_page"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f2" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_weight="1"
        android:text="@string/find_nearby_list_next_page"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f2" />

</LinearLayout>