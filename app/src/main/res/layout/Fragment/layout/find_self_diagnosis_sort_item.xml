<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/press_item">

    <android.support.v7.widget.CardView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_less"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/azure">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_less"
            android:layout_marginEnd="@dimen/margin_less"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_less"
            android:paddingBottom="@dimen/padding_less">

            <LinearLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="@dimen/icon_size_more"
                    android:layout_height="@dimen/icon_size_more"
                    android:layout_marginEnd="@dimen/right_margin"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvDiseaseName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f1"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPre"
                    android:layout_width="@dimen/icon_size_more"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/right_margin"
                    android:layout_marginBottom="@dimen/margin_less"
                    android:text="@string/introduction"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f2" />

                <TextView
                    android:id="@+id/tvIntroduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f3" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>