<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar_service" />

    <include layout="@layout/layout_empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_margin1"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/left_margin1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_button_lines7"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_less"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/icon_size_more_more1"
                android:layout_height="@dimen/icon_size_more_more1"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_less"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_less"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f3" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f3" />

                <TextView
                    android:id="@+id/tvPublish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f3" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin0"
            android:text="@string/mine_service_library_place"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_less_less"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/tvPlace"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f3" />

            <TextView
                android:id="@+id/tvRest"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f3" />

            <TextView
                android:id="@+id/tvIndex"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="@dimen/margin_less"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f3" />

            <TextView
                android:id="@+id/tvSum"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="@dimen/top_margin_less_less"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f3" />

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin0"
            android:text="@string/mine_service_library_introo"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1" />

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_less_less"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f3" />
    </LinearLayout>


</LinearLayout>