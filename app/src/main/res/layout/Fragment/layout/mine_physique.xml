<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0ce93">


    <com.example.HealthyCampus.common.widgets.TurnCardListView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--<com.mxn.soul.slidingcard_core.ContainerView-->
        <!--android:id="@+id/cdlist"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/icon_size_le"
        android:layout_height="@dimen/icon_size_le"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/picture_back" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvResult"
        android:layout_width="300dp"
        android:layout_height="480dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/radius_button4"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_physique_result_bg"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="@dimen/icon_size_more_hundred"
                    android:layout_height="@dimen/icon_size_more_hundred"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_f1"
                    tools:text="淤血质" />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/titleLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_less"
                app:cardBackgroundColor="#95def4">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_less3">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_less"
                            android:text="@string/mine_physique_behavior"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_f3" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_height_one"
                            android:layout_marginTop="@dimen/top_margin_less_less"
                            android:layout_marginBottom="@dimen/top_margin_less_less"
                            android:background="@color/interval_background1" />

                        <TextView
                            android:id="@+id/tvExpression"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_level_4"
                            android:textSize="@dimen/text_f4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_less"
                            android:text="@string/mine_physique_feature"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_f3" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_height_one"
                            android:layout_marginTop="@dimen/top_margin_less_less"
                            android:layout_marginBottom="@dimen/top_margin_less_less"
                            android:background="@color/interval_background1" />

                        <TextView
                            android:id="@+id/tvFeature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_level_4"
                            android:textSize="@dimen/text_f4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_less"
                            android:text="@string/mine_physique_inner_feature"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_f3" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_height_one"
                            android:layout_marginTop="@dimen/top_margin_less_less"
                            android:layout_marginBottom="@dimen/top_margin_less_less"
                            android:background="@color/interval_background1" />

                        <TextView
                            android:id="@+id/tvInner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_level_4"
                            android:textSize="@dimen/text_f4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_less"
                            android:text="@string/mine_physique_patience"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_f3" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_height_one"
                            android:layout_marginTop="@dimen/top_margin_less_less"
                            android:layout_marginBottom="@dimen/top_margin_less_less"
                            android:background="@color/interval_background1" />

                        <TextView
                            android:id="@+id/tvPatient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_level_4"
                            android:textSize="@dimen/text_f4" />
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
