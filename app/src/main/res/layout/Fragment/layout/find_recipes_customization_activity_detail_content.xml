<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/padding_less"
    android:paddingBottom="@dimen/padding_less">

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_less"
        android:layout_marginEnd="@dimen/margin"
        android:layout_toStartOf="@+id/tvUnit"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f3" />


    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_less"
        android:maxWidth="60dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f4" />

</RelativeLayout>