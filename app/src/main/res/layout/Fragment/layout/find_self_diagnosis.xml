<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_diagnosis" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDisease"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/pageBackground" />


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_title"
        app:tl_indicator_corner_radius="1dp"
        android:paddingBottom="@dimen/padding_less2"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="@dimen/icon_size_mo"
        app:tl_tab_space_equal="true"
        app:tl_textsize="@dimen/text_f2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />


</LinearLayout>