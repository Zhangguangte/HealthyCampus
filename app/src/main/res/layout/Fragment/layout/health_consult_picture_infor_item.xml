<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/PatientLayout"
    android:orientation="vertical"
    android:background="@drawable/press_consult_item"
    android:layout_margin="@dimen/margin_less"
    android:padding="@dimen/padding">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_less"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_level_3"
            android:textSize="@dimen/text_f3" />

        <View
            android:layout_width="@dimen/view_height_three"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/top_margin_less_less"
            android:layout_marginEnd="@dimen/top_margin_less_less"
            android:background="@color/interval_background1" />


        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_level_3"
            android:textSize="@dimen/text_f3" />

        <View
            android:layout_width="@dimen/view_height_three"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/top_margin_less_less"
            android:layout_marginEnd="@dimen/top_margin_less_less"
            android:background="@color/interval_background1" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_level_3"
            android:textSize="@dimen/text_f3" />


    </LinearLayout>

</LinearLayout>