<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/left_margin1"
    android:layout_marginLeft="@dimen/left_margin1"
    android:layout_marginTop="@dimen/padding_less2"
    android:layout_marginBottom="@dimen/padding_less2"
    android:elevation="@dimen/no_width"
    app:cardCornerRadius="@dimen/radius_card5"
    tools:ignore="UnusedAttribute">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_f1"
            android:paddingLeft="@dimen/left_margin_3"
            android:paddingTop="@dimen/padding_less2"
            android:paddingBottom="@dimen/top_margin_less_less"
            android:text="@string/user_new_friend_recommend" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvItem"
            android:paddingLeft="@dimen/padding_less2"
            android:paddingRight="@dimen/padding_less2"
            android:paddingBottom="@dimen/padding_less"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.v7.widget.CardView>