<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dishLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_size_more_hundred"
    android:layout_marginLeft="@dimen/left_margin1"
    android:layout_marginRight="@dimen/left_margin1"
    android:layout_marginBottom="@dimen/padding_less2"
    android:layout_marginTop="@dimen/padding_less2"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/radius_card5"
    android:elevation="@dimen/no_width"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRecommend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            tools:src="@drawable/find_food_default" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ghostwhite"
            android:gravity="center"
            android:textSize="@dimen/text_f4"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>