<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar_article" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIntroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_less"
                android:background="@drawable/shape_button_lines11"
                android:padding="@dimen/padding_less3"
                android:textColor="@color/text_level_3"
                android:textSize="@dimen/text_f2" />

            <TextView
                android:id="@+id/tvAntistop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_less"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f3" />

            <ImageView
                android:id="@+id/ivDetailImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_size_more_hundred_2"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/padding_less"
                android:textColor="@color/black"
                android:textSize="@dimen/text_f2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
