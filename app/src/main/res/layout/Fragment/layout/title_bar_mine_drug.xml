<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_title"
    android:orientation="horizontal"
    android:paddingTop="@dimen/top_padding_more"
    android:paddingBottom="@dimen/padding_less">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/ivBack"
            android:layout_width="@dimen/icon_size_less"
            android:layout_height="@dimen/icon_size_less"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginStart="@dimen/icon_size_more_hundred"
            android:textSize="@dimen/text_f0" />

        <ImageView
            android:id="@id/ivFunction"
            android:layout_width="@dimen/icon_size_le"
            android:layout_height="@dimen/icon_size_le"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/right_margin"
            android:src="@drawable/find_drug_scan"
            android:textSize="@dimen/text_f0" />

        <TextView
            android:id="@id/tvFunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="@string/cancel"
            android:textSize="@dimen/text_f1" />


    </RelativeLayout>
</LinearLayout>