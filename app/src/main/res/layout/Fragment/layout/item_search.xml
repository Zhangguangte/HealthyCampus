<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/left_margin1"
        android:layout_weight="1"
        android:background="@drawable/shape_button_lines4"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_mo"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_search"
            android:hint="@string/user_add_friend_search"
            android:padding="@dimen/padding_less2"
            android:singleLine="true"
            android:textSize="@dimen/text_f2" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/right_margin"
            android:src="@drawable/password_clear"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/right_margin"
        android:background="@drawable/shape_button_lines"
        android:gravity="center"
        android:text="@string/user_add_friend_search"
        android:textColor="@color/white"
        android:textSize="@dimen/text_f2"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnCanel"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/right_margin"
        android:background="@null"
        android:elevation="1dp"
        android:gravity="center"
        android:text="@string/umeng_socialize_cancel_btn_str"
        android:textColor="@color/black"
        android:textSize="@dimen/text_f2"
        android:visibility="gone" />

</LinearLayout>